{
  "manifest_version": 2,
 
  "name": "No",
  "description": "This is a No button for the web. Unhappy with a site? Just say no.",
  "version": "1.1",
  "author": "Emlyn O'Regan",

  "icons": { "16": "noicon16.png",
           "48": "noicon48.png",
          "128": "noicon128.png" },
           
  "browser_action": {
   "default_icon": "noicon48.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
    "*://*/"
   ]
}
